	else if (NIL != (op = subr3(car(x)))) {
		compsubr3(x, op);
	}
	else if (NIL != (op = osubr0(car(x)))) {
		composubr0(x, op);
	}
	else if (NIL != (op = osubr1(car(x)))) {
		composubr1(x, op);
	}
	else if (NIL != (op = lsubr0(car(x)))) {
		complsubr0(x, op);
	}
	else if (NIL != (op = lsubr1(car(x)))) {
		complsubr1(x, op);
	}
