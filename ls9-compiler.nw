		compexpr(caddr(x), 0);
		emitop(OP_MACRO);
		y = htlookup(Symhash, cadr(x));
		if (UNDEF == y) error("oops: unknown name in MACRO", cadr(x));
		emitarg(fixval(cdr(y)));
	}
	else if (NIL != (op = subr0(car(x)))) {
		compsubr0(x, op);
	}
	else if (NIL != (op = subr1(car(x)))) {
		compsubr1(x, op);
	}
	else if (NIL != (op = subr2(car(x)))) {
		compsubr2(x, op);
